# ------------------------------
# Application
# ------------------------------
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=changeme-super-secret

# FastAPI
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# ------------------------------
# PostgreSQL (Source Database)
# ------------------------------
SRC_DB_HOST=src_db
SRC_DB_PORT=5432
SRC_DB_NAME=src_database
SRC_DB_USER=src_user
SRC_DB_PASSWORD=changeme

# ------------------------------
# PostgreSQL (Destination Database)
# ------------------------------
DST_DB_HOST=dst_db
DST_DB_PORT=5432
DST_DB_NAME=dst_database
DST_DB_USER=dst_user
DST_DB_PASSWORD=changeme

# ------------------------------
# Redis
# ------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme

# ------------------------------
# pgAdmin
# ------------------------------
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=changeme

# ------------------------------
# Nginx
# ------------------------------
NGINX_HOST=0.0.0.0
NGINX_PORT=80

# ------------------------------
# Snowflake
# ------------------------------
SNOWFLAKE_ACCOUNT=xy12345.us-east-1
SNOWFLAKE_USER=your_user
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_ROLE=TRANSFORMER
SNOWFLAKE_WAREHOUSE=WH_XS
SNOWFLAKE_DATABASE=ANALYTICS
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_CLIENT_SESSION_KEEP_ALIVE=true

# -------- Spark cluster sizing --------
SPARK_WORKER_COUNT=1
SPARK_WORKER_CORES=2
SPARK_WORKER_MEMORY=2g

# -------- Jupyter --------
JUPYTER_TOKEN=dev
JUPYTER_PORT=8889

# -------- Spark Ports (non-conflicting) --------
SPARK_MASTER_UI_PORT=9090
SPARK_MASTER_PORT=7077
SPARK_HISTORY_PORT=18080
SPARK_WORKER_UI_BASE=9091  # only worker-01 UI exposed

# -------- Optional: MinIO (S3-compatible; off by default) --------
ENABLE_MINIO=false
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=admin12345
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
